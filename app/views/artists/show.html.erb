<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @artist.name %>
</p>

<h4>List of Songs </h4>

<% if @artist.songs.any? %>
  <ul>
    <% @artist.songs.each do |song| %>
      <li><%= song.name %></li>
      <%= link_to 'Delete', artist_song_path(@artist.id, song.id), method: :delete %>
    <% end %>
  </ul>
<% else %>
  <p>There are no song in this artist.</p>
<% end %>


